<h2>Sign Up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

	<%= f.input :name, :autofocus => true  %>
 	<%= f.input :email %>
	<%= f.input :password, label: "Password <br/> (Min. 8 characters)" %>
	<%= f.input :password_confirmation %>
<strong>
Additional Info
<strong>
	<%= f.input :image, label: "Upload a Profile Picture <br/> (Max 6 MB)" %>
    <%= f.input :image_remote_url, label: "or enter a URL", :autofocus => true %>
	<%= f.input :hometown %>
	<%= f.input :climbingfor, label: "How long have you been climbing for?" %>
	<%= f.input :ability, label: "Ability level? (ex. lead up to 5.10a and follow up to 5.11a)", as: :text, input_html: { rows: "2" } %>
	<%= f.input :favclimb, label: "Favorite climb or place to climb?" %>
	<%= f.input :interests, label: "Other Interests", as: :text, input_html: { rows: "3" } %>


  <div class="form-actions">
  	<%= f.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
