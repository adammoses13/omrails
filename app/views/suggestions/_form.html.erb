<%= simple_form_for(@suggestion, html: { class: 'form-horizontal'}) do |f| %>
    <% if @suggestion.errors.any? %>
    <ul>
      <% @suggestion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</br>

    <%= f.input :name, :autofocus => true, :input_html => { :class => "input-name" } %>
  
    <%= f.input :email, :input_html => { :class => "input-name" } %>
      
    <%= f.input :message, as: :text, :input_html => { rows: "4", :class => "input-name" } %>
    
  
  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>

<% end %>