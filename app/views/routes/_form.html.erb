<%= simple_form_for(@route, html: { class: "form horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_full_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

    <%= f.input :image, label: "Upload an Image" %>
    <%= f.input :Name, as: :text, input_html: { rows: "2" } %>
    <%= f.input :Grade, as: :text, input_html: { rows: "1" } %>
    <%= f.input :date, as: :text, input_html: { rows: "1" } %>
    <%= f.input :description, as: :text, input_html: { rows: "3" } %>
		
		
		
  
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
