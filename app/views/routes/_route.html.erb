<div class="box">
	<%= link_to (image_tag route.image(:thumb)), route%>
	<p class="description">
		<%= route.Name %>	
		<%= route.Grade %>
	</p>
	<p>
		<strong>
			Posted by <%= route.user.name %>
		</strong>
	</p>
	
	<% if current_user == route.user %>
		<p>
			<%= link_to 'Edit', edit_route_path(route) %>
			<%= link_to 'Delete', route, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>

